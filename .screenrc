# ~tune/.screenrc
# Yuichi TSUNEMATSU
defutf8 on
defencoding utf8
encoding utf-8 utf-81

startup_message off
autodetach on
defscrollback 10000
escape ^z^z
hardstatus alwayslastline "[%02c] %`%-w%{=b bw}%n %t%{-}%+w"

# Change Ctrl + direction key
# putty bindings
bindkey "^[OC" next
bindkey "^[OD" prev
termcapinfo xterm "ks=\E[?1l\E:ku=\E[A:kd=\E[B:kl=\E[D:kr=\E[C:kh=\E[5~:kH=\E[F"

